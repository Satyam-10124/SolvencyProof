{
  "name": "solvencyproof",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "install:all": "pnpm install",
    "contracts:compile": "pnpm --filter @solvencyproof/contracts compile",
    "contracts:deploy": "pnpm --filter @solvencyproof/contracts deploy:sepolia",
    "contracts:test": "pnpm --filter @solvencyproof/contracts test",
    "app:dev": "pnpm --filter @solvencyproof/app dev",
    "api:dev": "pnpm --filter @solvencyproof/backend dev",
    "api:start": "pnpm --filter @solvencyproof/backend start",
    "test": "pnpm --filter @solvencyproof/backend test",
    "test:all": "pnpm contracts:test && pnpm test",
    "backend:liabilities": "pnpm --filter @solvencyproof/backend build:liabilities",
    "backend:reserves": "pnpm --filter @solvencyproof/backend scan:reserves",
    "circuits:setup": "cd circuits && npm run setup",
    "circuits:prove": "cd circuits && npm run prove",
    "demo": "echo '1. Run: pnpm backend:liabilities' && echo '2. Run: pnpm backend:reserves' && echo '3. Run: pnpm app:dev' && echo '4. Open http://localhost:3000'"
  }
}
